{
  "extends": [
    "stylelint-config-standard-scss",
    "stylelint-config-prettier-scss",
    "stylelint-prettier/recommended"
  ],
  "plugins": ["stylelint-order", "stylelint-high-performance-animation"],
  "rules": {
    "custom-property-pattern": [
      "(^([a-z][a-z0-9]*)(-[a-z0-9]+)*$)|(^ids(_[a-z0-9]+)*$)",
      {
        "message": "Expected custom property name to be kebab-case or ids pattern"
      }
    ],
    "font-family-no-missing-generic-family-keyword": [
      true,
      { "ignoreFontFamilies": ["Itau Display", "Itau Text"] }
    ],
    "no-empty-source": null,
    "selector-class-pattern": [
      "^([a-z][a-z0-9]*)(-[a-z0-9]+)*$|^.[a-z]([a-z0-9-]+)?(__([a-z0-9]+-?)+)?(--([a-z0-9]+-?)+){0,2}$",
      {
        "message": "Expected custom property name to be kebab-case or BEM"
      }
    ],
    "scss/at-extend-no-missing-placeholder": null,
    "order/properties-alphabetical-order": true,
    "plugin/no-low-performance-animation-properties": true
  },
  "ignoreFiles": ["dist/**/*", "node_modules/**/*", "reports/**/*"]
}
